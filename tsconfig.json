{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "esnext", 
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "lib": ["esnext"],
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules/**",
    "lib",
    "examples",
    "src/__tests__",
    "**/*.spec.ts",
  ]
}
